CC=cl /nologo
CFLAGS=-c -Ox -Os -W3 -D _CRT_SECURE_NO_WARNINGS

LINKER=link
LINKCON = /nologo

all:view.exe

OBJ = obj


OBJECTS_MAKEHTML = $(OBJ)\main.obj $(OBJ)\makehtml.obj $(OBJ)\collectdir.obj $(OBJ)\utility.obj \

$(OBJECTS_MAKEHTML): $(@B).c view.h
    $(CC) /Fo$(OBJ)\ $(CFLAGS) $(@B).c

view.exe: $(OBJECTS_MAKEHTML)
    $(LINKER) $(LINKCON) -OUT:view.exe $(OBJECTS_MAKEHTML)
